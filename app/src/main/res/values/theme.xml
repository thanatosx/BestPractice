<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.App.Theme" parent="Theme.AppCompat.Light">
        <!--window style-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--color primary-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/white</item>

        <!--action bar-->
        <item name="actionBarSize">50dp</item>
        <item name="homeAsUpIndicator">@mipmap/ic_back</item>
        <item name="actionBarStyle">@style/App.Widget.ActionBar</item>

        <!--action overflow-->
        <item name="actionOverflowButtonStyle">@style/App.Widget.ActionButton.Overflow</item>

        <!--toolbar style-->
        <item name="toolbarStyle">@style/App.Widget.Toolbar</item>
    </style>

    <style name="App.Theme" parent="Base.App.Theme"/>

    <style name="App.Theme.FloatingTranslucent" parent="Base.App.Theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="App.Theme.Translucent" parent="Base.App.Theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>